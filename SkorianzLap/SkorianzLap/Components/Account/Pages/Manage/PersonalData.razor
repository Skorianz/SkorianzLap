@page "/Account/Manage/PersonalData"

@inject IdentityUserAccessor UserAccessor

<PageTitle>Personenbezogene Daten</PageTitle>

<StatusMessage />
<h3>Personenbezogene Daten</h3>

<div class="row">
    <div class="col-md-6">
        <p>Ihr Account beinhaltet personenbezogene Daten. Auf dieser Seite können Sie diese Downloaden oder Löschen lassen.</p>
        <p>
            <strong>Wenn Sie Ihren Account löschen, wird dieser für immer weg sein und kann nicht wiederhergestellt werden.</strong>
        </p>
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <button class="btn btn-primary" type="submit">Personenbezogene Daten Downloaden</button>
        </form>
        <p class="mt-3">
            <a href="Account/Manage/DeletePersonalData" class="btn btn-danger">Account und Personenbezogene Daten löschen</a>
        </p>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
    }
}
